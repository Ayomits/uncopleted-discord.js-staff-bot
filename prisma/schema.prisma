generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VacansiesSettings {
  guildId                   String  @id
  publishChannelId          String?
  vacansiesPublishChannelId String?
  embed                     Json?
}

model Vacancy {
  guildId     String     @id
  name        String    @unique
  description String
  icon        String
  embed       Json?
  question    Question[]
}

model Question {
  id          Int     @id @default(autoincrement())
  guildId     String
  name        String
  placeholder String
  vacancy     Vacancy @relation(fields: [vacancyId], references: [guildId])
  vacancyId   String
}
